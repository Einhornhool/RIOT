config PACKAGE_CRYPTOAUTHLIB
    bool "Microchip CryptoAuth library"
    select MODULE_CRYPTOAUTHLIB_CONTRIB
    depends on HAS_PERIPH_I2C
    select MODULE_PERIPH_I2C
    select MODULE_XTIMER
    imply MODULE_PERIPH_I2C_RECONFIGURE

config MODULE_CRYPTOAUTHLIB_HASHES_SHA256
    bool "Microchip CryptoAuth library"
    depends on PACKAGE_CRYPTOAUTHLIB
    select MODULE_CRYPTOAUTHLIB_HASHES

config MODULE_CRYPTOAUTHLIB_HASHES
    bool
    help
        Symbol for using Cryptoauth hashes
    

rsource "contrib/Kconfig"
