menuconfig PSA_SECURE_ELEMENT
    bool "PSA Secure Element Configuration"
    select MODULE_PSA_KEY_SLOT_MGMT
    select MODULE_PSA_SE_MGMT

if PSA_SECURE_ELEMENT

config MODULE_PSA_SE_MGMT
    bool

config PSA_SE_ATECCX08A
    bool "Microchip Cryptoauthlib Driver"
    select PACKAGE_CRYPTOAUTHLIB

config PSA_MULTIPLE_SECURE_ELEMENTS
    bool "Use multiple secure elements"

config PSA_MAX_SE_COUNT
    int "Sets maximum number of usable SEs"
    default 2 if PSA_MULTIPLE_SECURE_ELEMENTS
    default 1

config PSA_SECURE_ELEMENT_ASYMMETRIC
    bool
    help
        Indicate that an asymmetric operation is used

endif # PSA_SECURE_ELEMENT