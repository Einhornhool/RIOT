menuconfig COMPONENT_gnrc_lorawan
    bool "GNRC LoRaWAN support"
    depends on COMPONENT_xtimer
    depends on COMPONENT_random
    depends on COMPONENT_hashes
    depends on COMPONENT_crypto
    depends on COMPONENT_netdev_layer
    depends on COMPONENT_gnrc_neterr
    depends on COMPONENT_gnrc_netif
    depends on COMPONENT_fmt
    depends on COMPONENT_iolist
    depends on HAS_LORA
    help
        Use GNRC LoRaWAN.

if COMPONENT_gnrc_lorawan

config GNRC_LORAWAN_TIMER_DRIFT
    int "Maximum timer drift"
    default 10
    range -1000 1000
    help
        The value is expressed in per mille. This is only a workaround to
        compensate inaccurate timers. E.g. a value of 1 means there's a
        positive drift of 0.1% (set timeout to 1000 ms => triggers after
        1001 ms)

config GNRC_LORAWAN_MIN_SYMBOLS_TIMEOUT
    int "Minimum symbols to detect a LoRa preamble"
    default 30
    range 0 1024

endif # COMPONENT_gnrc_lorawan
